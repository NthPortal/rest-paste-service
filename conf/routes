# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index

# API endpoints
POST    /api                        controllers.PasteController.createPaste

PUT     /api/:id                    controllers.PasteController.modifyPaste(id)

DELETE  /api/:id                    controllers.PasteController.deletePaste(id)

GET     /api/read/:id               controllers.PasteController.pasteForReadId(id)

GET     /api/write/:id              controllers.PasteController.pasteForWriteId(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
